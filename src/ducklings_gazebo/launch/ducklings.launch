<launch>
    <param name="/use_sim_time" value="true"/>

    <arg name="base" value="$(optenv TURTLEBOT_BASE )"/> <!-- create, roomba -->
    <arg name="stacks" value="$(optenv TURTLEBOT_STACKS )"/>  <!-- circles, hexagons -->
    <arg name="3d_sensor" value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>  <!-- kinect, asus_xtion_pro -->


    <!-- start world -->
    <node name="gazebo" pkg="gazebo" type="gazebo"
          args="$(find ducklings_gazebo)/worlds/playground.world" respawn="false" output="screen"/>

    <!-- start gui -->
    <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen"/>

    <!-- include our robots -->
    <include file="$(find ducklings_gazebo)/launch/robots.launch">
        <arg name="base" value="$(arg base)"/>
        <arg name="stacks" value="$(arg stacks)"/>
        <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    </include>
</launch>